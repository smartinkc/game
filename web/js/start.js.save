var myChoice = 0;
var computerChoice = 0;

$( document ).ready(function() {
	getChoices();
});

$('#choices').on('click', '.choice', function() {
	$('.choice').attr('disabled','disabled');
	$('#' + $(this).attr('id')).css('background-color','red');
});

function getChoices(){
	$.ajax({
  		type: 'GET',
  		url: 'getChoices',
  		data: '',
		success: function( r ) {
			var id;
			var data = '';

			//print button choices
			for(id in r){
				data += '<button class="choice" id="' + r[id]['id'] + '">' + r[id]['name'] + '</button>';
			}

			$('#choices').html(data);
		},
		error: function ( r ) {
			alert(r);
		}
	});	
}
